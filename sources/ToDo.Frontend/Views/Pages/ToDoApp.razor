@page "/app"

@using ToDo.Frontend.Views.Partials

@inherits BaseView<ViewModels.AppViewModel>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 to-do-lists">
            <h4>Lists</h4>
            <Lists Model="@Model.ListsViewModel"/>
        </div>
        <div class="col-sm-9 to-do-items">
            <h4><small>@(Model.SelectedList?.Name ?? "Please, select to-do list")</small></h4>
            <hr>
            <Items Model="@Model.ItemsViewModel"/>
        </div>
    </div>
</div>
